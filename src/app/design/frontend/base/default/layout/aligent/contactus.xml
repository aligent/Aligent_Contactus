<layout>
    <contacts_index_index>
        <reference name="root">
            <action method="unsetChild">
                <name>contactForm</name>
            </action>
            <block type="aligent_contactus/contacts" name="contactForm" template="aligent/contactus/form.phtml">
                <block type="cms/block" name="contacts_prompt">
                    <action method="setBlockId">
                        <block_id>contacts_prompt</block_id>
                    </action>
                </block>
            </block>
        </reference>
    </contacts_index_index>
</layout>